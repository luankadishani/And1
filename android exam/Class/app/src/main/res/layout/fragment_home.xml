<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Library App Menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/c"
        android:id="@+id/tvwel"/>
    <Button
        android:layout_below="@+id/tvwel"
        android:layout_width="wrap_content"
        android:text="View All Books"
        android:id="@+id/btnv"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/btnv"
        android:layout_width="wrap_content"
        android:text="Add Book"
        android:id="@+id/btna"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/btna"
        android:layout_width="wrap_content"
        android:text="Update / Edit"
        android:id="@+id/btnu"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />

</RelativeLayout>